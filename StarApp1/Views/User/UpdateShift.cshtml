@model StarApp1.Controllers.UpdateViewModel

@{
    ViewData["Title"] = "UpdateShift";
}

<h1 class="text-center">Update Shift Days</h1>

@if (ViewBag.msg != null)
    {
        <div class="alert ">
            <strong>@ViewBag.msg</strong>
        </div>
    }
else
{
<hr />
<div class="row justify-content-center">
    <div class="col-md-4 justify-content-center">
        <form asp-action="UpdateShift">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="LogId" />
            <div class="form-group">
                <label asp-for="updatedASD" class="control-label">Afternoon Shift Days</label>
                <input asp-for="updatedASD" class="form-control" />
                <span asp-validation-for="updatedASD" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="updatedNSD" class="control-label">Night Shift Days</label>
                <input asp-for="updatedNSD" class="form-control" />
                <span asp-validation-for="updatedNSD" class="text-danger"></span>
            </div>      
            <div class="form-group text-center">
                <input type="submit" value="Update" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
}

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
